  <tr>
    <th>Notes</th>
    <th>Created</th>
    <th>Updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @invoice.notes.each do |note| %>
    <tr>
      <td><%= note.text.capitalize.split(" ").first(10).join(" ") %> ... </td>
