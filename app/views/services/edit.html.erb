

<div class="well">
<fieldset>
  <legend>Edit Service </legend>

<%= form_for [ @invoice, @service] do |f| %>
  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.date_field :date , class: 'form-control' %>
</div>

     <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description , class: 'form-control' %>
</div>
     <div class="form-group">
    <%= f.label :unit_type %><br>
    <%= f.text_field :unit_type, class: 'form-control' %>
 </div>
    <div class="form-group">
    <%= f.label :rate %><br>
    <%= f.text_field :rate, class: 'form-control' %>
</div>


 <%= link_to 'Back', invoice_path( @invoice),  class: "btn btn-primary" %>
  <%= f.button 'Update' , class: 'btn btn-primary' %>

 <% end %>
</fieldset>
</div>

</div>
